@model List<Pessoa>
<h1>Listagem de Usuários</h1>

@if (TempData["SucessoCriacao"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SucessoCriacao"]
    </div>
}

<button asp-action="Criar" asp-controller="Pessoa" type="button" class="btn btn-primary">Criar Usuário</button>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Sobrenome</th>
            <th scope="col">CPF</th>
            <th scope="col">Data de nascimento</th>
            <th scope="col">Tipo saguineo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Nome</td>
                <td>@item.Sobrenome</td>
                <td>@item.CPF</td>
                <td>@item.DataNascimento</td>
                <td>@item.TipoSanguineo</td>
            </tr>
        }

    </tbody>
</table>