@using GerenciamentoDePessoas.Models.Enum
@model GerenciamentoDePessoas.Models.Pessoa
<h1>Criar Usuário</h1>

@if (TempData["ErroCriacao"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErroCriacao"]
    </div>
}

<form asp-action="Criar" asp-controller="Pessoa" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="nome" placeholder="Nome">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Sobrenome">Sobrenome</label>
        <input type="text" asp-for="Sobrenome" class="form-control" id="Sobrenome" placeholder="Sobrenome">
        <span asp-validation-for="Sobrenome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="dataNascimento">Data de nascimeto</label>
        <input type="date" asp-for="DataNascimento" class="form-control" id="dataNascimento" placeholder="">
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="cpf">CPF</label>
        <input type="text" asp-for="CPF" class="form-control" id="cpf" placeholder="CPF">
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="tipoSanguineo">Tipo Sanguíneo</label>
        <select class="form-control" asp-for="TipoSanguineo">
            @foreach (var tipo in Enum.GetValues(typeof(ETipoSanguineo)))
            {
                if (Model?.TipoSanguineo == (ETipoSanguineo)tipo)
                {
                    <option selected value="@tipo">@tipo</option>
                }
                else
                {
                    <option value="@tipo">@tipo</option>
                }
            }
        </select>
        <span asp-validation-for="TipoSanguineo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

